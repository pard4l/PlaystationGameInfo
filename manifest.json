{
  "manifest_version": 3,
  "name": "PlayStation Game Info",
  "version": "1.0.0",
  "description": "Mostra informações detalhadas dos jogos do PlayStation Plus ao passar o mouse",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.playstation.com/*",
    "https://www.dropbox.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.playstation.com/pt-br/ps-plus/games/*"],
      "js": ["api-example.js", "api-local.js", "content.js"],
      "css": ["styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PlayStation Game Info"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["4playReviewPsn.json", "output/4playReviewPsn.json"],
      "matches": ["https://www.playstation.com/*"]
    }
  ]
}
